{
  "name": "mcp-pluggdax-bare-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./styles/main.css -o ./dist/greet.css --minify",
    "build:js": "esbuild src/components/greet.tsx --bundle --format=esm --outfile=dist/greet.js --external:react --external:react-dom",
    "preview": "vite preview"
  },
  "dependencies": {
    "@openai/apps-sdk-ui": "^0.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.19.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  }
}
